<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clear_frame"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:background="@drawable/frame2_square"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rw1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/clear_frame"
            android:backgroundTint="#6399C74E">

            <ImageView
                android:id="@+id/buff_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_horse" />

            <TextView
                android:id="@+id/reward_kill"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/almendra"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:text="TextView"
                android:textAlignment="textStart"
                android:textColor="@color/textColorBlack"
                android:textSize="18dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.9" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/rw2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ProgressBar
                android:id="@+id/progressBar3"
                style="@style/MyProgressBarThree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progress="50"
                android:progressBackgroundTint="#00FFFFFF"
                android:progressTint="#4F6CF0FF" />

            <TextView
                android:id="@+id/what_is_point"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/whiter"
                android:fontFamily="@font/almendra"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/textColorBlack"
                android:textSize="24dp" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/rw3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/whiter"
            android:orientation="horizontal">

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.85" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView29"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:rotation="0"
                    app:srcCompat="@drawable/glow_sticks" />
            </TableRow>

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.85" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rw4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:background="@color/whiter">

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.9" />

            <Button
                android:id="@+id/hold_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/buttonrect_effect"
                android:backgroundTint="@color/whiter"
                android:backgroundTintMode="src_over"
                android:fontFamily="@font/almendra"
                android:scaleX="1"
                android:scaleY="1"
                android:text="PUSH"
                android:textColor="@color/textColorBlack"
                android:textSize="20dp" />

            <Button
                android:id="@+id/hold_button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/buttonrect_effect"
                android:backgroundTint="@color/whiter"
                android:backgroundTintMode="src_over"
                android:fontFamily="@font/almendra"
                android:scaleX="1"
                android:scaleY="1"
                android:text="PUSH"
                android:textColor="@color/textColorBlack"
                android:textSize="20dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.9" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>