<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BC643232"
    android:orientation="vertical"
    tools:context=".BattlePre">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:background="@drawable/clear_frame"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/almendra"
                android:text="\tOpponent"
                android:textColor="@color/textColor"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_weight="1.15"
                android:backgroundTintMode="src_over"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/op_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#83644646"
                    android:scaleType="fitCenter"
                    android:src="@drawable/torch" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/op_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/almendra"
                        android:text="\tOpponent"
                        android:textColor="@color/textColor"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/op_tactic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/almendra"
                        android:text="\tOpponent"
                        android:textColor="@color/textColorBlack"
                        android:textSize="12dp" />
                </TableRow>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_weight="0.78"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:baselineAligned="false"
                    android:gravity="bottom">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:background="#3B69C5BD"
                        android:scaleType="fitCenter"
                        android:src="@drawable/archer_ic" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:background="#4868AF61"
                        android:scaleType="fitCenter"
                        android:src="@drawable/sword_ic" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:background="#315C8ABB"
                        android:scaleType="fitCenter"
                        android:src="@drawable/horse_ic" />

                </LinearLayout>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/op_archer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#3B69C5BD"
                        android:fontFamily="@font/almendra"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/textColor"
                        android:textSize="28dp" />

                    <TextView
                        android:id="@+id/op_sword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#4868AF61"
                        android:fontFamily="@font/almendra"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/textColor"
                        android:textSize="28dp" />

                    <TextView
                        android:id="@+id/op_horse"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#315C8ABB"
                        android:fontFamily="@font/almendra"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/textColor"
                        android:textSize="28dp" />

                </TableRow>

            </LinearLayout>

        </TableRow>

    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="0.3"
            android:background="@drawable/frame2"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:rotation="270"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_down_arrow" />

                <Spinner
                    android:id="@+id/tactic_choose"
                    style="@style/SpinnerTheme"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:dropDownWidth="match_parent"
                    android:gravity="center"
                    android:scrollbarStyle="insideOverlay"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:rotation="90"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_down_arrow" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.6" />

        </LinearLayout>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/count_military"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/almendra"
                            android:text="0/10"
                            android:textColor="@color/textColor"
                            android:textSize="36dp" />
                    </TableRow>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:gravity="center">

                                <ImageButton
                                    android:id="@+id/imageView5"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:background="@drawable/circle_frame"
                                    android:padding="8dp"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/archer_ic" />
                            </RelativeLayout>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:gravity="center">

                                <ImageButton
                                    android:id="@+id/imageView6"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:background="@drawable/circle_frame"
                                    android:padding="8dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/sword_ic" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="8dp"
                                android:layout_weight="1"
                                android:gravity="center">

                                <ImageButton
                                    android:id="@+id/imageView7"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="16dp"
                                    android:layout_marginRight="16dp"
                                    android:background="@drawable/circle_frame"
                                    android:padding="8dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/horse_ic" />

                            </TableRow>
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/count_archer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/almendra"
                                    android:text="0"
                                    android:textColor="@color/textColor"
                                    android:textSize="24dp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/count_sword"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/almendra"
                                    android:text="0"
                                    android:textColor="@color/textColor"
                                    android:textSize="24dp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/count_horse"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/almendra"
                                    android:text="0"
                                    android:textColor="@color/textColor"
                                    android:textSize="24dp" />
                            </TableRow>
                        </LinearLayout>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:baselineAligned="false"
                                    android:orientation="horizontal">

                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.8">

                                        <ImageButton
                                            android:id="@+id/arhcercount0"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="6dp"
                                            android:layout_marginEnd="8dp"
                                            android:layout_marginBottom="6dp"
                                            android:background="@color/Transparent"
                                            android:backgroundTintMode="src_over"
                                            android:scaleType="fitCenter"
                                            android:src="@drawable/buttoncircle_effecteksi"
                                            android:textAlignment="gravity" />
                                    </TableRow>

                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.8">

                                        <ImageButton
                                            android:id="@+id/arhcercount1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="8dp"
                                            android:layout_marginTop="6dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_marginBottom="6dp"
                                            android:background="@color/Transparent"
                                            android:backgroundTintMode="src_atop"
                                            android:scaleType="fitCenter"
                                            android:src="@drawable/buttoncircle_effect"
                                            android:textAlignment="gravity" />
                                    </TableRow>

                                </LinearLayout>
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:baselineAligned="false"
                                    android:orientation="horizontal">

                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.8">

                                        <ImageButton
                                            android:id="@+id/swordcount0"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="6dp"
                                            android:layout_marginEnd="8dp"
                                            android:layout_marginBottom="6dp"
                                            android:background="@color/Transparent"
                                            android:scaleType="fitCenter"
                                            android:src="@drawable/buttoncircle_effecteksi" />
                                    </TableRow>

                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.8">

                                        <ImageButton
                                            android:id="@+id/swordcount1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="8dp"
                                            android:layout_marginTop="6dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_marginBottom="6dp"
                                            android:backgroundTintMode="multiply"
                                            android:scaleType="fitCenter"
                                            android:src="@drawable/buttoncircle_effect"
                                            android:background="@color/Transparent" />
                                    </TableRow>

                                </LinearLayout>
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:baselineAligned="false"
                                    android:orientation="horizontal">

                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.8">

                                        <ImageButton
                                            android:id="@+id/horsecount0"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="16dp"
                                            android:layout_marginTop="6dp"
                                            android:layout_marginEnd="8dp"
                                            android:layout_marginBottom="6dp"
                                            android:background="@color/Transparent"
                                            android:scaleType="fitCenter"
                                            android:src="@drawable/buttoncircle_effecteksi" />
                                    </TableRow>

                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.8">

                                        <ImageButton
                                            android:id="@+id/horsecount1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="8dp"
                                            android:layout_marginTop="6dp"
                                            android:layout_marginEnd="16dp"
                                            android:layout_marginBottom="6dp"
                                            android:background="@color/Transparent"
                                            android:backgroundTintMode="multiply"
                                            android:scaleType="fitCenter"
                                            android:src="@drawable/buttoncircle_effect" />
                                    </TableRow>

                                </LinearLayout>
                            </TableRow>
                        </LinearLayout>
                    </TableRow>
                </LinearLayout>
            </TableRow>
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_weight="0.2">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/flee"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:background="@drawable/buttonrecthigh_effect"
                        android:backgroundTint="@color/whiter"
                        android:backgroundTintMode="src_over"
                        android:drawableTop="@drawable/ic_hen"
                        android:fontFamily="@font/almendra"
                        android:text="FLEE (-%8)"
                        android:textSize="20dp" />
                </TableRow>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.75" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.85">

                    <Button
                        android:id="@+id/ready_to_battle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:background="@drawable/buttonrecthigh_effect"
                        android:backgroundTint="@color/whiter"
                        android:backgroundTintMode="src_over"
                        android:drawableTop="@drawable/ic_strategy"
                        android:fontFamily="@font/almendra"
                        android:text="TO BATTLE!"
                        android:textSize="20dp" />
                </TableRow>

            </TableRow>

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </TableRow>
</LinearLayout>