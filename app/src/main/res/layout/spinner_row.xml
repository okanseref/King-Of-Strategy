<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="src_in"
    android:gravity="center">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/spinner_lay_txt"
        android:layout_alignBottom="@+id/spinner_lay_txt"
        android:layout_alignParentStart="true"
        android:background="#F22C2825"
        android:gravity="center">

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/spinner_lay_txt"
        android:layout_alignBottom="@+id/spinner_lay_txt"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="#F22C2825"
        android:gravity="center">

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/spinner_lay_txt"
        android:layout_alignBottom="@+id/spinner_lay_txt"
        android:layout_alignParentStart="true"
        android:background="@drawable/buttonrecthigh_effect"
        android:backgroundTint="@color/whiter"
        android:backgroundTintMode="src_over"
        android:gravity="center">

    </TableRow>

    <TextView
        android:id="@+id/spinner_lay_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/almendra"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="TextView"
        android:textColor="@color/textColor"
        android:textSize="13dp" />

</RelativeLayout>